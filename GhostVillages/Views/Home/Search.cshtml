@model ICollection<GhostVillages.DataAccess.Entities.VillageEntity>

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Результаты поиска</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
        }

        h1 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 40px;
            font-weight: 700;
        }

        .card {
            border: none;
            border-radius: 18px;
            overflow: hidden;
            background: #f8f9fa;
            box-shadow: 4px 4px 14px rgba(0, 0, 0, 0.05), -2px -2px 8px rgba(255, 255, 255, 0.6);
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 8px 8px 20px rgba(0, 0, 0, 0.08);
            }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .card-title {
            font-weight: 600;
            color: #34495e;
        }

        a.text-decoration-none:hover .card-title {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Результаты поиска</h1>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var village in Model)
            {
                <div class="col">
                    <a href="@Url.Action("GetVillage", "Village", new { id = village.Id })" class="text-decoration-none">
                        <div class="card h-100">
                            @if (village.Image != null)
                            {
                                var base64Image = Convert.ToBase64String(village.Image);
                                <img src="data:image/jpeg;base64,@base64Image" class="card-img-top" alt="Изображение деревни">
                            }
                            else
                            {
                                <img src="https://via.placeholder.com/300x200?text=Нет+изображения" class="card-img-top" alt="Нет изображения">
                            }
                            <div class="card-body">
                                <h5 class="card-title text-truncate" title="@village.Title">@village.Title</h5>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
